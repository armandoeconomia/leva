<!DOCTYPE html>
<html>
<head>
  <title>LEVA Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
</head>

<body class="admin-body">
  <div class="admin-shell">
    <aside class="admin-sidebar">
      <div class="admin-logo">
        <span class="admin-logo__icon">&#8599;</span>
        LEVA Admin
      </div>
      <p>Cuidado confiable</p>
      <ul class="admin-menu">
        <li>
          <%= link_to "Dashboard", admin_dashboard_path,
                      class: "admin-nav-link #{'is-active' if current_page?(admin_dashboard_path)}" %>
        </li>
        <li>
          <%= link_to "Users", admin_users_path,
                      class: "admin-nav-link #{'is-active' if controller_name == 'users'}" %>
        </li>
        <li>
          <%= link_to "Patients", admin_patients_path,
                      class: "admin-nav-link #{'is-active' if controller_name == 'patients'}" %>
        </li>
        <li>
          <%= link_to "Doctors", admin_doctors_path,
                      class: "admin-nav-link #{'is-active' if controller_name == 'doctors'}" %>
        </li>
        <li>
          <%= link_to "Medical Institutes", admin_medical_institutes_path,
                      class: "admin-nav-link #{'is-active' if controller_name == 'medical_institutes'}" %>
        </li>
        <li>
          <%= link_to "Appointments", admin_appointments_path,
                      class: "admin-nav-link #{'is-active' if controller_name == 'appointments'}" %>
        </li>
      </ul>
    </aside>

    <main class="admin-main">
      <div class="admin-navbar">
        <div>
          <p class="admin-navbar__title">Panel administrativo</p>
          <p class="admin-navbar__subtitle">
            Coordina usuarios, personal medico e instituciones en un solo lugar.
          </p>
        </div>
        <div class="admin-navbar__cta">
          <span class="page-eyebrow">Tu salud, a un clic de distancia</span>
          <% if defined?(root_path) %>
            <%= link_to "Ver landing", root_path, class: "btn-leva-plain" %>
          <% end %>
        </div>
      </div>

      <div class="admin-page">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
