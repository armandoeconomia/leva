<% calendar = @calendar || Calendar.includes(:hours).find_by(id: params[:id]) %>
<% hours = calendar&.hours&.order(:start_time) || [] %>

<div class="container py-4 py-lg-5">
  <% if calendar.nil? %>
    <div class="alert alert-warning">No se encontró el calendario.</div>
  <% else %>
    <div class="row g-4 mb-4">
      <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4 h-100">
          <div class="card-body p-4">
            <p class="text-uppercase fw-semibold small mb-1 text-muted">Calendario</p>
            <h2 class="fw-bold mb-3"><%= l(calendar.date, format: :long) rescue calendar.date %></h2>
            <p class="text-muted mb-0">Gestiona tus horas de trabajo y revisa la disponibilidad para este día.</p>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card shadow-sm border-0 rounded-4 h-100">
          <div class="card-body p-4">
            <p class="text-uppercase fw-semibold small mb-1 text-muted">Acciones</p>
            <div class="d-flex flex-column gap-2">
              <%= link_to 'Volver al calendario', doctors_calendars_path, class: "btn btn-outline-secondary" %>
              <%= link_to 'Agregar horas', new_doctors_calendar_hour_path(calendar), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <p class="text-uppercase fw-semibold small mb-1 text-muted">Disponibilidad</p>
            <h4 class="mb-0">Horas de trabajo</h4>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th class="text-muted small">Inicio</th>
                <th class="text-muted small">Fin</th>
              </tr>
            </thead>
            <tbody>
              <% if hours.any? %>
                <% hours.each do |hour| %>
                  <tr>
                    <td><%= hour.start_time&.strftime('%H:%M') %></td>
                    <td><%= hour.end_time&.strftime('%H:%M') %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="2" class="text-muted">Aún no registras horas para este día.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
