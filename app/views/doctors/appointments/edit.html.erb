<div class="container py-4 py-lg-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4 p-lg-5">
          <p class="text-uppercase fw-semibold small mb-1 text-muted">Citas</p>
          <h2 class="fw-bold mb-4">Editar cita</h2>

          <%= form_with model: [:doctors, @appointment], local: true, class: "row g-3" do |form| %>
            <div class="col-md-6">
              <%= form.label :date, "Fecha", class: "form-label fw-semibold" %>
              <%= form.date_field :date, class: "form-control rounded-3" %>
            </div>

            <div class="col-md-6">
              <%= form.label :hour, "Hora", class: "form-label fw-semibold" %>
              <%= form.time_field :hour, class: "form-control rounded-3" %>
            </div>

            <div class="col-12">
              <%= form.label :reason_for_consultation, "Motivo de la consulta", class: "form-label fw-semibold" %>
              <%= form.text_area :reason_for_consultation, rows: 3, class: "form-control rounded-3" %>
            </div>

            <div class="col-md-6">
              <%= form.label :status, "Estado", class: "form-label fw-semibold" %>
              <%= form.select :status, Appointment.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "form-select rounded-3" %>
            </div>

            <div class="col-12 d-flex gap-2 mt-3">
              <%= form.submit "Guardar cambios", class: "btn btn-primary px-4" %>
              <%= link_to 'Cancelar', doctors_appointments_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
