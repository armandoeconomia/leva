<h1>Citas asignadas</h1>

<% if @appointments.any? %>
  <ul>
    <% @appointments.each do |appt| %>
      <li>
        <strong><%= appt.date %> a las <%= appt.hour %></strong>
        - Estado: <%= appt.status %>
        - <%= link_to 'Ver', doctors_appointment_path(appt) %>
        - <%= link_to 'Editar', edit_doctors_appointment_path(appt) %>
        - <%= link_to 'Eliminar', doctors_appointment_path(appt), method: :delete, data: { confirm: '¿Eliminar esta cita?' } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No hay citas asignadas todavía.</p>
<% end %>
