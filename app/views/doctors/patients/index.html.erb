<% doctor = current_user&.doctor %>
<% appointments = doctor ? doctor.appointments.includes(patient: :user).order(date: :desc) : [] %>
<% patients = appointments.map(&:patient).compact.uniq { |p| p.id } %>

<div class="admin-shell" style="padding: 32px 40px 48px; max-width: 1100px; margin: 0 auto;">
  <div class="row align-items-center g-4 mb-4">
    <div class="col-lg-8">
      <div class="p-4 p-lg-5 rounded-4 shadow-sm" style="background: linear-gradient(135deg, #D9D8E0 0%, #B69CFF 35%, #F8F7F9 100%);">
        <p class="text-uppercase fw-semibold small mb-2 text-dark">Pacientes</p>
        <h1 class="fw-bold mb-3">Tus pacientes atendidos</h1>
        <p class="text-muted mb-0">Consulta rápidamente los datos de cada paciente, accede a sus historiales y revisa las citas asociadas.</p>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body">
          <p class="text-muted mb-1 small">Total de pacientes</p>
          <h3 class="fw-bold mb-0"><%= patients.size %></h3>
          <p class="text-muted mb-0 small">Derivados de tus citas programadas.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow-sm border-0 rounded-4" style="border-radius: 18px; box-shadow: 0 18px 32px rgba(0,0,0,0.06);">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <p class="text-uppercase fw-semibold small mb-1 text-muted">Listado</p>
          <h4 class="mb-0">Pacientes atendidos</h4>
        </div>
        <%= link_to 'Volver al dashboard', doctors_dashboard_path, class: "btn btn-outline-secondary btn-sm" %>
      </div>
      <% if patients.any? %>
        <div class="table-responsive">
          <table class="table align-middle mb-0">
            <thead>
              <tr>
                <th class="text-muted small">Nombre</th>
                <th class="text-muted small">Última cita</th>
                <th class="text-muted small">Teléfono</th>
                <th class="text-muted small text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% patients.each do |patient| %>
                <% last_appt = appointments.find { |a| a.patient_id == patient.id } %>
                <tr>
                  <td class="fw-semibold"><%= patient.user&.name || "Paciente ##{patient.id}" %></td>
                  <td class="text-muted"><%= last_appt&.date&.strftime('%d %b %Y') || "Sin citas" %></td>
                  <td class="text-muted"><%= patient.user&.phone_number.presence || "Sin teléfono" %></td>
                  <td class="text-end">
                    <%= link_to 'Ver perfil', doctors_patient_path(patient), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted mb-0">Aún no tienes pacientes derivados de tus citas.</p>
      <% end %>
    </div>
  </div>
</div>
