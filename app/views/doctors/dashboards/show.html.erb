<% doctor = current_user&.doctor %>
<% appointments = doctor ? doctor.appointments.includes(patient: :user).order(date: :asc, hour: :asc) : Appointment.none %>
<% upcoming_appointments = appointments.where("date >= ?", Date.current) %>
<% past_appointments = appointments.where("date < ?", Date.current).order(date: :desc, hour: :desc) %>
<% patients = appointments.map(&:patient).compact.uniq { |p| p.id } %>
<% institute = doctor&.medical_institute %>

<div class="container py-4 py-lg-5">
  <div class="row align-items-center g-4 mb-4">
    <div class="col-lg-7">
      <div class="p-4 p-lg-5 rounded-4 shadow-sm" style="background: linear-gradient(135deg, #D9D8E0 0%, #B69CFF 35%, #F8F7F9 100%);">
        <p class="text-uppercase fw-semibold small mb-2 text-dark">Panel del doctor</p>
        <h1 class="fw-bold mb-3">Tu agenda, pacientes y actividades en un solo lugar</h1>
        <p class="text-muted mb-4">Administra tus citas, revisa tus pacientes y mantén a la vista tu instituto médico con una experiencia simple.</p>
        <div class="d-flex flex-wrap gap-2">
          <%= link_to 'Ver citas', doctors_appointments_path, class: "btn btn-primary fw-semibold px-4 py-2 shadow-sm" %>
          <%= link_to 'Pacientes', doctors_patients_path, class: "btn btn-outline-light text-dark fw-semibold px-4 py-2" %>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="row g-3">
        <div class="col-12">
          <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body d-flex justify-content-between align-items-center">
              <div>
                <p class="text-muted mb-1 small">Citas próximas</p>
                <h4 class="fw-bold mb-0"><%= upcoming_appointments.size %></h4>
              </div>
              <span class="badge text-bg-primary px-3 py-2">Hoy y adelante</span>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body">
              <p class="text-muted mb-1 small">Citas pasadas</p>
              <h5 class="fw-bold mb-0"><%= past_appointments.size %></h5>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="card shadow-sm border-0 rounded-4 h-100">
            <div class="card-body">
              <p class="text-muted mb-1 small">Pacientes activos</p>
              <h5 class="fw-bold mb-0"><%= patients.size %></h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4 mb-4">
    <div class="col-lg-7">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <p class="text-uppercase fw-semibold small mb-1 text-muted">Agenda</p>
              <h4 class="mb-0">Próximas citas</h4>
            </div>
            <%= link_to 'Ver todas', doctors_appointments_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
          <% if upcoming_appointments.any? %>
            <div class="list-group list-group-flush">
              <% upcoming_appointments.limit(5).each do |appt| %>
                <div class="list-group-item px-0 d-flex justify-content-between align-items-start">
                  <div>
                    <p class="text-muted mb-1 small">
                      <%= l(appt.date, format: :long) rescue appt.date %> · <%= appt.hour.strftime("%H:%M") rescue appt.hour %>
                    </p>
                    <h6 class="fw-semibold mb-1"><%= appt.patient&.user&.name || "Paciente sin nombre" %></h6>
                    <p class="mb-0 text-muted"><%= appt.reason_for_consultation.presence || "Sin motivo registrado" %></p>
                  </div>
                  <%= link_to 'Ver', doctors_appointment_path(appt), class: "btn btn-sm btn-outline-primary" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">No hay citas programadas.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <p class="text-uppercase fw-semibold small mb-1 text-muted">Instituto</p>
              <h4 class="mb-0">Instituto médico</h4>
            </div>
          </div>
          <% if institute %>
            <h6 class="fw-bold"><%= institute.name %></h6>
            <p class="mb-1 text-muted"><%= institute.address.presence || "Dirección no disponible" %></p>
            <p class="mb-3 text-muted"><%= institute.phone_number.presence || "Teléfono no disponible" %></p>
            <span class="badge text-bg-light text-dark px-3 py-2">Registro: <%= doctor.medical_registration %></span>
          <% else %>
            <p class="text-muted mb-0">Sin instituto asignado.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4 mb-4">
    <div class="col-lg-7">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <p class="text-uppercase fw-semibold small mb-1 text-muted">Historial</p>
              <h4 class="mb-0">Citas anteriores</h4>
            </div>
            <%= link_to 'Ver todas', doctors_appointments_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
          <% if past_appointments.any? %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th class="text-muted small">Fecha</th>
                    <th class="text-muted small">Paciente</th>
                    <th class="text-muted small">Motivo</th>
                    <th class="text-muted small text-end">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% past_appointments.limit(5).each do |appt| %>
                    <tr>
                      <td><%= l(appt.date, format: :long) rescue appt.date %></td>
                      <td><%= appt.patient&.user&.name || "Paciente sin nombre" %></td>
                      <td class="text-muted"><%= appt.reason_for_consultation.presence || "Sin motivo" %></td>
                      <td class="text-end">
                        <%= link_to 'Ver', doctors_appointment_path(appt), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted mb-0">Aún no hay citas anteriores registradas.</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <p class="text-uppercase fw-semibold small mb-1 text-muted">Pacientes</p>
              <h4 class="mb-0">Pacientes activos</h4>
            </div>
            <%= link_to 'Ver todos', doctors_patients_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
          <% if patients.any? %>
            <div class="list-group list-group-flush">
              <% patients.first(5).each do |patient| %>
                <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="fw-semibold mb-0"><%= patient.user&.name || "Paciente ##{patient.id}" %></h6>
                    <p class="text-muted mb-0 small"><%= patient.user&.phone_number.presence || "Sin teléfono" %></p>
                  </div>
                  <%= link_to 'Ver', doctors_patient_path(patient), class: "btn btn-sm btn-outline-primary" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted mb-0">Aún no tienes pacientes registrados.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
