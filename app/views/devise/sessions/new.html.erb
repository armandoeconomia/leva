<style>
  .leva-login-page {
    background: #f7f4fb;
  }

  .leva-login-logo {
    width: 56px;
    height: 56px;
    border-radius: 1rem;
    box-shadow: 0 12px 30px rgba(122, 109, 255, 0.4);
  }

  .leva-login-card {
    border-radius: 30px;
    max-width: 480px;
  }

  .leva-login-card .form-control {
    border-radius: 12px;
    border-color: #e1dff0;
    padding: 0.75rem 1rem;
  }

  .leva-login-card label {
    font-weight: 600;
    color: #4b4b63;
  }
</style>

<div class="leva-login-page min-vh-100 d-flex flex-column">
  <div class="container flex-grow-1 d-flex flex-column align-items-center justify-content-center py-5">
    <%= link_to root_path, class: "text-center mb-4 d-inline-flex flex-column align-items-center text-decoration-none" do %>
      <%= image_tag "logo_leva.png", alt: "Leva logo", class: "leva-login-logo mb-3" %>
      <p class="fw-semibold fs-4 mb-0 text-dark">LEVA</p>
    <% end %>

    <div class="leva-login-card bg-white shadow-lg w-100 p-4 p-md-5">
      <h1 class="text-center fw-bold mb-2">Iniciar Sesión</h1>
      <p class="text-center text-secondary mb-4">Bienvenido de nuevo. Accede a tu cuenta.</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="mb-3">
          <%= f.input :email,
                      label: "Email",
                      required: true,
                      autofocus: true,
                      placeholder: "ejemplo@correo.com",
                      input_html: { autocomplete: "email", class: "form-control" } %>
        </div>
        <div class="mb-3">
          <%= f.input :password,
                      label: "Contraseña",
                      required: true,
                      placeholder: "Contraseña",
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.input :remember_me,
                          as: :boolean,
                          label: "Recordarme",
                          wrapper_html: { class: "mb-0" },
                          input_html: { class: "form-check-input" },
                          label_html: { class: "form-check-label text-secondary" } %>
            </div>
          <% end %>

          <% if devise_mapping.recoverable? %>
            <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "text-decoration-none fw-semibold", style: "color: #9d84ff;" %>
          <% end %>
        </div>

        <%= f.button :submit, "Iniciar Sesión", class: "btn mediapp-hero-btn text-white w-100 py-3" %>
      <% end %>

      <% if devise_mapping.registerable? %>
        <p class="text-center text-secondary mt-4 mb-0">
          ¿No tienes una cuenta?
          <%= link_to "Regístrate aquí", new_registration_path(resource_name), class: "fw-semibold text-decoration-none", style: "color: #9d84ff;" %>
        </p>
      <% end %>
    </div>
  </div>

  <footer class="container text-center text-secondary py-4">
    <small>&copy; <%= Time.current.year %> LEVA. Todos los derechos reservados.<br>
      Contacto: soporte@leva.com · +54 11 0000-0000</small>
  </footer>
</div>
