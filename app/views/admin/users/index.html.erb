<div class="admin-page-header">
  <div>
    <span class="page-eyebrow">Usuarios del ecosistema</span>
    <h1 class="admin-page-title">Gestion de usuarios</h1>
    <p class="admin-page-description">
      Administra cuentas, permisos y datos basicos de contacto para tu equipo medico y pacientes.
    </p>
  </div>
  <div class="admin-actions">
    <%= link_to "Crear usuario", new_admin_user_path, class: "btn-leva-primary" %>
    <%= link_to "Regresar al dashboard", admin_dashboard_path, class: "btn-leva-ghost" %>
  </div>
</div>

<div class="admin-card">
  <table class="admin-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Telefono</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <strong><%= user.name %> <%= user.last_name %></strong><br>
            <small class="admin-row-meta">ID: <%= user.id %></small>
          </td>
          <td><%= user.email %></td>
          <td><%= user.phone_number.presence || "Sin numero" %></td>
          <td>
            <span class="status-chip">
              <%= user.admin? ? "Administrador" : "Usuario estandar" %>
            </span>
          </td>
          <td>
            <div class="admin-actions">
              <%= link_to "Ver", admin_user_path(user), class: "btn-soft btn-soft--info" %>
              <%= link_to "Editar", edit_admin_user_path(user), class: "btn-soft btn-soft--warning" %>
              <%= link_to "Eliminar",
                          admin_user_path(user),
                          method: :delete,
                          data: { confirm: "Seguro que deseas eliminar este usuario?" },
                          class: "btn-soft btn-soft--danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
