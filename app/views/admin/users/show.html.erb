<h2>User Details</h2>

<div class="card">
  <div class="card-body">
    <p><strong>Name:</strong> <%= @user.name %> <%= @user.last_name %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Phone:</strong> <%= @user.phone_number %></p>
    <p><strong>Admin:</strong> <%= @user.admin? ? "Yes" : "No" %></p>

    <%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-warning" %>
    <%= link_to "Back", admin_users_path, class: "btn btn-secondary ms-2" %>
  </div>
</div>
