<div class="card shadow-sm">
  <div class="card-body">

    <%= form_with model: [:admin, @doctor], local: true do |f| %>

      <% if @doctor.errors.any? %>
        <div class="alert alert-danger">
          <h5>There were errors:</h5>
          <ul>
            <% @doctor.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :user_id, "User (email)" %>
          <%= f.collection_select :user_id, User.all, :id, :email,
                { prompt: "Select user" },
                class: "form-select" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :medical_institute_id, "Medical Institute" %>
          <%= f.collection_select :medical_institute_id,
                MedicalInstitute.all, :id, :name,
                { prompt: "Select institute" },
                class: "form-select" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :speciality %>
          <%= f.select :speciality, Doctor.specialities.keys,
                { prompt: "Select speciality" },
                class: "form-select" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :medical_registration, "Medical License" %>
          <%= f.text_field :medical_registration, class: "form-control" %>
        </div>
      </div>

      <div class="mt-3">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_doctors_path, class: "btn btn-secondary ms-2" %>
      </div>

    <% end %>

  </div>
</div>
