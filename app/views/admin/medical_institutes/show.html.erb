<h2 class="mb-4">Institute Details</h2>

<div class="card shadow-sm">
  <div class="card-body">

    <p><strong>Name:</strong> <%= @medical_institute.name %></p>
    <p><strong>Address:</strong> <%= @medical_institute.address %></p>
    <p><strong>Phone:</strong> <%= @medical_institute.phone_number %></p>
    <p><strong>Emergency Phone:</strong> <%= @medical_institute.emergency_phone_number %></p>
    <p><strong>Type:</strong> <%= @medical_institute.institute_type %></p>
    <p><strong>Latitude:</strong> <%= @medical_institute.latitude %></p>
    <p><strong>Longitude:</strong> <%= @medical_institute.longitude %></p>

    <p><strong>Admin User:</strong> <%= @medical_institute.user.email %></p>

    <div class="mt-4">
      <%= link_to "Edit", edit_admin_medical_institute_path(@medical_institute),
                  class: "btn btn-warning" %>
      <%= link_to "Back", admin_medical_institutes_path,
                  class: "btn btn-secondary ms-2" %>
    </div>

  </div>
</div>
