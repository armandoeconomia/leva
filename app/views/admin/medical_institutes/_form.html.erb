<div class="card shadow-sm">
  <div class="card-body">

    <%= form_with model: [:admin, @medical_institute], local: true do |f| %>

      <% if @medical_institute.errors.any? %>
        <div class="alert alert-danger">
          <h5>There were errors:</h5>
          <ul>
            <% @medical_institute.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :user_id, "Admin User" %>
          <%= f.collection_select :user_id, User.all, :id, :email,
                { prompt: "Select user" },
                class: "form-select" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :emergency_phone_number %>
          <%= f.text_field :emergency_phone_number, class: "form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :institute_type %>
        <%= f.select :institute_type, MedicalInstitute.institute_types.keys,
              { prompt: "Select type" },
              class: "form-select" %>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= f.label :latitude %>
          <%= f.number_field :latitude, step: 0.000001, class: "form-control" %>
        </div>

        <div class="col-md-6 mb-3">
          <%= f.label :longitude %>
          <%= f.number_field :longitude, step: 0.000001, class: "form-control" %>
        </div>
      </div>

      <div class="mt-3">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_medical_institutes_path,
                    class: "btn btn-secondary ms-2" %>
      </div>

    <% end %>

  </div>
</div>
